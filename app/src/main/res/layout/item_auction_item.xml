<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView
        android:id="@+id/item_auction_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/item_auction_user_name"
        android:id="@+id/item_auction_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/item_auction_start_date"
        android:id="@+id/item_auction_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/item_auction_end_date"
        android:id="@+id/item_auction_latest_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>